<p id="notice"><%= notice %></p>

<h1>Clients Companies</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address post</th>
      <th>Prefecture</th>
      <th>Address city</th>
      <th>Address building</th>
      <th>Established</th>
      <th>President</th>
      <th>Employees number</th>
      <th>Employees memo</th>
      <th>Stock</th>
      <th>Stock memo</th>
      <th>Homepage</th>
      <th>Time start</th>
      <th>Time end</th>
      <th>Time memo</th>
      <th>Average ages</th>
      <th>Domain text</th>
      <th>Welfare</th>
      <th>Day off</th>
      <th>Recruiter</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clients_companies.each do |clients_company| %>
      <tr>
        <td><%= clients_company.name %></td>
        <td><%= clients_company.address_post %></td>
        <td><%= clients_company.prefecture_id %></td>
        <td><%= clients_company.address_city %></td>
        <td><%= clients_company.address_building %></td>
        <td><%= clients_company.established %></td>
        <td><%= clients_company.president %></td>
        <td><%= clients_company.employees_number %></td>
        <td><%= clients_company.employees_memo %></td>
        <td><%= clients_company.stock %></td>
        <td><%= clients_company.stock_memo %></td>
        <td><%= clients_company.homepage %></td>
        <td><%= clients_company.time_start %></td>
        <td><%= clients_company.time_end %></td>
        <td><%= clients_company.time_memo %></td>
        <td><%= clients_company.average_ages %></td>
        <td><%= clients_company.domain_text %></td>
        <td><%= clients_company.welfare %></td>
        <td><%= clients_company.day_off %></td>
        <td><%= clients_company.recruiter %></td>
        <td><%= link_to 'Show', clients_company %></td>
        <td><%= link_to 'Edit', edit_clients_company_path(clients_company) %></td>
        <td><%= link_to 'Destroy', clients_company, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

