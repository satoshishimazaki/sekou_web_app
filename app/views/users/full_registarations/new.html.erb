<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :last_name %><br />
    <%= f.last_name_field :last_name, autofocus: true, autocomplete: "last_name" %>
  </div>

  <div class="field">
    <%= f.label :first_name %><br />
    <%= f.first_name_field :first_name,                autocomplete: "first_name" %>
  </div>

  <div class="field">
    <%= f.label :last_name_kana %><br />
    <%= f.last_name_field :last_name_kana,              autocomplete: "last_name_kana" %>
  </div>

  <div class="field">
    <%= f.label :first_name_kana %><br />
    <%= f.first_name_kana_field :first_name_kana,       autocomplete: "first_name_kana" %>
  </div>

  <div class="field">
    <%= f.label :phone_number %><br />
    <%= f.phone_number_field :phone_number,             autocomplete: "phone_number" %>
  </div>

  <div class="actions">
    <%= f.submit "Full Registrations" %>
  </div>
<% end %>


