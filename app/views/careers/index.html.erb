<p id="notice"><%= notice %></p>

<h1>Careers</h1>

<table>
  <thead>
    <tr>
      <th>Employee</th>
      <th>Company name</th>
      <th>Start</th>
      <th>End</th>
      <th>Employee pattern</th>
      <th>Career outline</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @careers.each do |career| %>
      <tr>
        <td><%= career.employee_id %></td>
        <td><%= career.company_name %></td>
        <td><%= career.start %></td>
        <td><%= career.end %></td>
        <td><%= career.employee_pattern_id %></td>
        <td><%= career.career_outline %></td>
        <td><%= link_to 'Show', career %></td>
        <td><%= link_to 'Edit', edit_career_path(career) %></td>
        <td><%= link_to 'Destroy', career, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

